<h2>Registro</h2>

<div class="bloque">

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <p><%= f.label :email %><br />
	  <%= f.email_field :email, :class => "radio-5 input-text-adornado" %></p>

	  <p><%= f.label :password %><br />
	  <%= f.password_field :password, :class => "radio-5 input-text-adornado" %></p>

	  <p><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation, :class => "radio-5 input-text-adornado" %></p>

	  <p><%= f.submit "Registrarme", :class => "as-link boton verde largo" %></p>
	<% end %>

	<%= render :partial => "usuarios/shared/links" %>

</div>
