<h2>Iniciar sesión</h2>


<div class="bloque">

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <p><%= f.label :email %><br />
	  <%= f.email_field :email, :class => "radio-5 input-text-adornado" %></p>

	  <p><%= f.label :password, "Contraseña" %><br />
	  <%= f.password_field :password, :class => "radio-5 input-text-adornado" %></p>

	  <% if devise_mapping.rememberable? -%>
	    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordarme" %></p>
	  <% end -%>

		<div class="separador">
	  	<p><%= f.submit "Iniciar", :class => "as-link boton amarillo largo" %></p>
		</div>
	<% end %>

	<%= render :partial => "usuarios/shared/links" %>
	

</div>

